<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notes.notesActivity">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/aclonica"
            android:text="Notes"
            android:textSize="30sp"
            android:background="@color/Activity_theme"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" />
    </ScrollView>
    <TextView
        android:id="@+id/tv_NOTE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Your saved password will show here"
        android:visibility="invisible"
        android:gravity="center"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/ExtendedFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_back"
        android:contentDescription="@string/FAB_item"
        android:text="@string/Notes"
        app:hoveredFocusedTranslationZ="6dp"
        app:icon="@drawable/add"
        android:onClick="addNotes"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp" />

    <!--    TODO Check 2 Add Personal Info Feature insted of Profile and move Profile to Setting-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Activity_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nevigation_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
