<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KEYS" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Activity_theme</item>
        <item name="colorPrimaryVariant">@color/button_back</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_back</item>
        <item name="colorSecondaryVariant">@color/Activity_theme_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/left_trans_anim</item>
        <item name="android:windowExitTransition">@transition/left_trans_anim</item>
    </style>

    <style name="Theme.KEYS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KEYS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KEYS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>