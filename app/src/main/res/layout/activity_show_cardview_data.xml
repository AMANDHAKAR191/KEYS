<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aman.app.home.ShowCardviewDataActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_website_logo"
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_website_title"
        android:gravity="center"
        android:layout_margin="60dp"
        android:textSize="20dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_thems1"
        android:elevation="8dp"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/tv_img_title"
        android:gravity="center"
        android:hint="Website"
        android:textSize="18dp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintTop_toBottomOf="@id/img_website_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:src="@drawable/arrow_back"
        android:onClick="goBack"
        android:background="@drawable/fully_transparent_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_edit"
        android:src="@drawable/create"
        android:background="@drawable/fully_transparent_background"
        android:onClick="editdata"
        app:layout_constraintTop_toBottomOf="@+id/tv_img_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="5dp"
            android:background="@drawable/rounded_thems2"
            app:layout_constraintTop_toBottomOf="@+id/tv_img_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/displaylogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextView"
                android:hint="User Name"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_displaypassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                android:clickable="false"
                android:hint="Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/displaypassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:inputType="textWebPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/displaywebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Website"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:maxLines="1"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/open_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_baseline_open_in_new_24"/>
            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>