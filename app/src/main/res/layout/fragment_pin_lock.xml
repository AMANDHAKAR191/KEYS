<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".aman.app.notes.pinLockFragment">
    <ImageButton
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="gocencal"
        android:background="?attr/colorOnPrimary"
        android:src="@drawable/close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:elevation="8dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/group_1final_keys_logo" />

<!--    <TextView-->
<!--        android:id="@+id/tv_use_biometrix"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/profile_name"-->
<!--        android:gravity="center"-->
<!--        android:onClick="open_fingerprintActivity"-->
<!--        android:text="Use FingerPrint"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="24dp"-->
<!--        android:visibility="visible" />-->

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_dots"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:keypadButtonSize="72dp"
        app:pinLength="6"
        app:dotFilledBackground="?attr/colorOnSecondary"
        app:dotEmptyBackground="?attr/colorOnSecondary"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="?attr/colorOnSecondary"
        app:keypadTextSize="18dp" />

</RelativeLayout>