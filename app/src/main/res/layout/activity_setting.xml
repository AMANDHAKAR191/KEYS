<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".baseactivitys.SettingActivity">
    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="300dp"
        android:background="@color/Activity_theme"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="100dp"
        android:gravity="start|center"
        android:text="@string/setting_title"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/Activity_theme"
        android:src="@drawable/arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Switch
                android:id="@+id/sw_enable_fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable FingerPrint to Unlock the App" />
            <TextView
                android:id="@+id/tv_app_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/app_info"
                android:text="\t\tApp Info"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_contectus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/live_help"
                android:text="\t\Contect us"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>